{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "^/api/(.*)", "dest": "/api/index.js" },
    { "src": "^/(assets/.*)$", "dest": "$1" }, // serve assets directly
    { "src": "/(.*)", "dest": "/index.html" } // fallback for SPA routes
  ]
}
